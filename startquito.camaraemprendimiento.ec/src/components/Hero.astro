---
// src/components/Hero.astro

import Countdown from "./Countdown.astro"
---

<section id="home" class="min-h-screen flex items-center justify-center bg-cover bg-center" style="background-image: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.4)), url('/assets/portadastartquito.svg');">
    <div class="flex flex-col items-center text-center">
      <!-- Logo -->
      <img src="/assets/letsstartblanco.png" alt="Let's Start Logo" class="w-3/4 md:w-2/3 mb-6 max-w-lg" />
  
      <!-- Title -->
      <h3 class="text-3xl md:text-4xl font-semibold text-white mb-6">El Panorama de las startups en el Ecuador</h3>
  
      <!-- Partner Logos -->
      <div class="flex justify-center space-x-8 mb-6">
        <img src="./assets/startquito-blanco.png" alt="Start Quito Logo" class="w-20 h-20 md:w-32 md:h-32 object-contain animate-bounce-slow">
        <img src="./assets/logousfqblanco.png" alt="USFQ Logo" class="w-20 h-20 md:w-32 md:h-32 object-contain animate-bounce-slow">
      </div>
  
      <!-- Countdown -->
      <Countdown />
  
      <!-- Date and Time -->
      <div class="mb-6 text-center text-white">
        <p class="text-lg"><i class="fa fa-calendar"></i> 12 de Agosto 2024 &nbsp;|&nbsp; <i class="fa fa-clock-o"></i> 3:30 pm - 7:00 pm</p>
      </div>
  
      <!-- Location -->
      <div class="mb-6">
        <a href="https://maps.app.goo.gl/AsUN7UswndHs2auu8" class="text-lg text-purple-400 hover:underline">
          <i class="fa fa-map-marker"></i> Quito, Paseo San Francisco, Teatro Shakespeare
        </a>
      </div>
  
      <!-- Buttons -->
      <div class="flex space-x-4 mb-6">
        <a href="#register" class="px-6 py-3 bg-white text-black rounded-lg hover:bg-gray-200 transition">REGISTRARSE</a>
        <a href="http://app.start-fellowship.org/application/new?program=start-fellowship-pitching-competition" class="px-6 py-3 border border-white text-white rounded-lg hover:bg-purple-600 transition">PARTICIPAR</a>
      </div>
  
      <!-- Call to Action -->
      <p class="text-lg text-white"><i class="fa fa-rocket"></i> Forma parte de las 10 startups m√°s innovadoras del Let's Start</p>
    </div>
  </section>
  